<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="csrf-token" content="<%= csrfToken %>"/>
    <title><%= title %></title>
    <script>
      const token = document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      function updateTodo(id, completed) {
        fetch(`/todos/${id}`, {
          method: "put",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ completed, "_csrf": token })
        })
        .then((res) => {
          if(res.ok)
            window.location.reload()
        })
        .catch((err) => console.log(err));
      }

      function deleteTodo(id) {
        fetch(`/todos/${id}`, {
          method: "delete",
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify({"_csrf": token})
        })
        .then((res) => {
          if(res.ok)
            window.location.reload()
        })
        .catch((err) => console.log(err));
      }
    </script>
  </head>
  <body>
    <div class="mt-4 grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
        <a href="/signout">Signout</a>
        <form action="/todos" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input type="text" name="title" placeholder="What's next?" class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm" required>
            </div>
            <div class="flex-auto">
              <input required type="date" name="dueDate" class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm">
            </div>
            <div class="flex-none">
              <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Add</button>
            </div>
          </div>
        </form>
        <div>
          <%- include('todoSection.ejs', {title: "Overdue", data: overdueTodos}) %>
          <%- include('todoSection.ejs', {title: "Due Today", data: dueTodayTodos}) %>
          <%- include('todoSection.ejs', {title: "Due Later", data: dueLaterTodos}) %>
          <%- include('todoSection.ejs', {title: "Completed Items", data: completedTodos}) %>
        </div>
      </div>
    </div>
  </body>
</html>
